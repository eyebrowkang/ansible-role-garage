metadata_dir = "{{ garage_metadata_dir }}"
data_dir = "{{ garage_data_dir }}"
db_engine = "{{ garage_db_engine }}"
replication_factor = {{ garage_replication_factor }}

rpc_bind_addr = "{{ garage_rpc_bind_addr }}"
rpc_public_addr = "{{ garage_rpc_public_addr }}"
rpc_secret = "{{ garage_rpc_secret | default(lookup('password', '/dev/null length=32 chars=hexdigits')) }}"

[s3_api]
s3_region = "{{ garage_s3_region }}"
api_bind_addr = "{{ garage_s3_api_bind_addr }}"
root_domain = "{{ garage_s3_root_domain }}"

[s3_web]
bind_addr = "{{ garage_web_bind_addr }}"
root_domain = "{{ garage_web_root_domain }}"
index = "index.html"

[k2v_api]
api_bind_addr = "{{ garage_k2v_api_bind_addr }}"

[admin]
api_bind_addr = "{{ garage_admin_api_bind_addr }}"
metrics_token = "{{ garage_metrics_token | default(lookup('password', '/dev/null length=32 chars=ascii_letters,digits')) }}"
admin_token = "{{ garage_admin_token | default(lookup('password', '/dev/null length=32 chars=ascii_letters,digits')) }}"
